@{
}
@using Apprenticeship2.Data.Entities
@model Training
<a href="Training/Add" class="btn btn-primary mb-4"> Add Training</a>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Trainings</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
<tr>
    <th>Student</th>
    <th>Supervisor</th>
    <th>Team Leader</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Update</th>
    <th>Delete</th>

</tr>
    @foreach (var T in (List<Training>)ViewBag.trainings)
    {
        <tr>
            <td>@T.student.FirstName @T.student.SecondName</td>
            <td>@T.supervisor.FirstName @T.supervisor.SecondName</td>
            <td>@T.teamLeader.FirstName @T.teamLeader.SecondName</td>
            <td>@T.startDate</td>
            <td>@T.endDate</td>

            <td><a class="icon-note menu-icon text-warning" href="/Training/update?TrainingId=@T.TrainingId"></a></td>
            <td><a class="ti-trash text-danger" href="/Training/delete?TrainingId=@T.TrainingId"></a></td>
        </tr>
    }
</table>
</div>
</div>
</div>
</div>
</div>