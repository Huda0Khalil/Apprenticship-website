@{
}
@{
    var TR = ViewBag.Training;
}
@using Apprenticeship2.Data.Entities


<div class="container-fluid mt-3">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-12">
            <div class="card bg-light">
                <div class="card-body card-body shadow-lg p-3 bg-white rounded">
                    <div class="text-center">
                        <h2 class="mb-3 text-dark">Training</h2>

                        <h5 class="m-3 mb-1">University Supervisor: @TR.supervisor.FirstName @TR.supervisor.SecondName </h5>
                        <h6 class="m-3">Objectives:</h6>
                        <ul>
                            @foreach (var TO in (List<TrainingObjectives>)TR.trainingObjectives)
                            {
                                <li class="m-3 text-black">@TO.objective.Name</li>
                            }
                        </ul>
                        <h6 class="m-3">@TR.supervisor.Email</h6>
                        <h6 class="m-3">Supervisor phone: @TR.supervisor.PhoneNumber</h6>

                        <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="col-lg-12">
            <div class="card bg-light bg-gradient">
                <div class="card-body card-body shadow-lg p-3 bg-white rounded">
                    <div class="text-center">
                        <h2 class="mb-3 text-dark">Team Leader</h2>
                        <img width="20%" src="~/images/user/4.png" class="rounded-circle" alt="">
                        <h5 class="mt-3 mb-1">@TR.teamLeader.FirstName @TR.teamLeader.SecondName @TR.teamLeader.LastName</h5>
                        <h6 class="mt-3">@TR.teamLeader.Company.companyName</h6>
                        <h6 class="mt-3">@TR.teamLeader.Email</h6>
                        <h6 class="mt-3">@TR.teamLeader.PhoneNumber</h6>

                        <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                    </div>
                </div>
            </div>
        </div>
       
    </div>
    <br />
    <br />
    <br />
    
    <h2 class="m-3 text-black text-center" width="100%">Assignments</h2>
    <br />
    <div class="row ">
        
        <div class="col-lg-4">
            <div class="card gradient-9">
                <div class="stat-widget-one">
                    <div class="stat-content">
                        <div class=" card-title">All Assignments</div>
                        <div class="stat-digit gradient-6-text">@ViewBag.AssignmentsCount</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar gradient-3" style="width: 50%;" role="progressbar">
                            <span class="sr-only"> </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card gradient-7">
                <div class="stat-widget-one">
                    <div class="stat-content">
                        <div class="card-title">Finished Assignments</div>
                        <div class="stat-digit gradient-6-text">@ViewBag.finishedAssignments</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar gradient-2" style="width: 100%;" role="progressbar">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card gradient-8">
                <div class="stat-widget-one">
                    <div class="stat-content">
                        <div class="card-title">Current Assignments</div>
                        <div class="stat-digit gradient-6-text">@ViewBag.currentAssignments</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar gradient-4" style="width: 15%;" role="progressbar">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


</div>
<br />
<br />
<br />

<h2 class="m-3 text-black text-center">Current Assignments</h2>
<br />
<div class="row">
    @foreach (var A in (List<Assignment>)ViewBag.Assignments)
    {
        <div class="col-md-4 col-lg-4">
            <div class="card text-center shadow-lg p-3 mb-5 bg-body rounded">
                <div class="card-body">
                    <h5 class="card-title">@A.assignmentTitle</h5>
                    
                   <p>start Date: @A.startDate</p>
                   <p>End Date: @A.endDate</p>
                   
                        <a  href="/Student/ShowOneAssignment?assignmentID=@A.AssignmentId" class="btn btn-primary">Go</a>
                    
                </div>

            </div>
        </div>
        <!-- End Col -->
    }
</div>