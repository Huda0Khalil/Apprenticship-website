@{
}
@using Apprenticeship2.Data.Entities
@model Assignment
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Assignments</h4>
                <div class="table-responsive">
                    <table id="myTable" class="table table-striped table-bordered zero-configuration">
    <thead>
        <tr>
            <th>Assignment Title</th>
           
            
            <th>Start Date</th>
            <th>End Date</th>
          
            <th>View Assignment</th>
            <th>Reports</th>
        </tr>
    </thead>
   <tbody>
        @foreach (var A in (List<Assignment>)ViewBag.assignments)
        {
            <tr>

                <td>@A.assignmentTitle</td>
               
                
                <td>@A.startDate</td>
                <td>@A.endDate</td>
                <td><a class="text-info" href="/Student/ShowOneAssignment?assignmentID=@A.AssignmentId">View</a></td>
                <td><a class="mdi mdi-file-document-box text-green" href="/Report/showReports?AID=@A.AssignmentId"></a></td>
            </tr>



        }
   </tbody>
    

</table>
</div>
</div>
</div>
</div>
</div>