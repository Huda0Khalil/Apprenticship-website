@{
}
@using Apprenticeship2.Data.Entities
@using Apprenticeship2.Data.DTO
@model InserReportDTO
<h2>Assignment Name: @ViewBag.AssignmentTitle</h2>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">

                        <form method="post" action="/Report/insertReport" enctype="multipart/form-data" class="form-valide">
                            <h2>Add Report</h2>
                            <hr />
                            <input name="assignmentId" value="@ViewBag.AssignmentID" hidden />

                            <div class="form-group row">
                                <label asp-for="reportName" class="col-lg-4 col-form-label"></label>
                                <div class="col-lg-6">
                                <input asp-for="reportName" class="form-control" aria-required="true" />
                                <span asp-validation-for="reportName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="reportDescription" class="col-lg-4 col-form-label"></label>
                                <div class="col-lg-6">
                                <input asp-for="reportDescription" class="form-control" aria-required="true" />
                                <span asp-validation-for="reportDescription" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="reportNotes" class="col-lg-4 col-form-label"></label>
                                <div class="col-lg-6">
                                <input asp-for="reportNotes" class="form-control" aria-required="true" />
                                <span asp-validation-for="reportNotes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <!-- <form asp-for="upFile" class="form-control" enctype="multipart/form-data" method="post" action="/Assignment/UploadFile"> -->
                                <label class="col-lg-4 col-form-label">Files</label>
                                <div class="col-lg-6">
                                 <input type="file" name="upFiles" multiple />
                                <p asp-validation-for="upFiles" class="text-danger"></p>
                                </div>
                                <!-- </form>-->

                            </div>
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">

                                    <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
