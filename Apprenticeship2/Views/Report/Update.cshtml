@using Apprenticeship2.Data.Entities
@using Apprenticeship2.Data.DTO
@model UpdateReportDTO

<form method="post" action="/Report/updateReport" enctype="multipart/form-data">
    <h2>Update a Report</h2>
    <hr />
    <input asp-for="assignmentId" hidden />
    <input asp-for="reportID" hidden />

    <div class="form-floating">
        <input asp-for="reportName" class="form-control" aria-required="true" />
        <label asp-for="reportName"></label>
    </div>
    <div class="form-floating">
        <input asp-for="reportDescription" class="form-control" aria-required="true" />
        <label asp-for="reportDescription"></label>
    </div>
    <div class="form-floating">
        <input asp-for="reportNotes" class="form-control" aria-required="true" />
        <label asp-for="reportNotes"></label>
    </div>
    <div class="form-floating">
        <p>Select files to <strong>remove </strong></p>
        @foreach (var a in (List<ReportFiles>)ViewBag.files)
        {
            <div class="p-1 m-2">

                <a class="text-decoration-none" target="_blank" href="/Report/GetFile?attachmentId=@a.reportFilesId">@a.name</a>
                <a class ="btn btn-primary mb-4" href="/Report/DeleteFileReport?fileId=@a.reportFilesId&reportID=@Model.reportID">Delete</a>
            </div>
        }


        <input type="file" name="upFiles" multiple />
</div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>

</form>