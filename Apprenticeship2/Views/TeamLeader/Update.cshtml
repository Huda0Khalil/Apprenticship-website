@{
}
@using Apprenticeship2.Data.Entities
@model TeamLeader

<form method="post" action="/TeamLeader/updateLeader">
    <h2>Update Team Leader</h2>
    <hr />
    <input asp-for="Id" hidden />

    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" aria-required="true" />
        <label asp-for="FirstName"></label>
    </div>
    <div class="form-floating">
        <input asp-for="SecondName" class="form-control" aria-required="true" />
        <label asp-for="SecondName"></label>
    </div>
    <div class="form-floating">
        <input asp-for="ThirdName" class="form-control" aria-required="true" />
        <label asp-for="ThirdName"></label>
    </div>
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" aria-required="true" />
        <label asp-for="LastName"></label>
    </div>
   
    <div class="form-floating">
        <input asp-for="Age" class="form-control" aria-required="true" />
        <label asp-for="Age"></label>
    </div>
    <div class="form-floating">
        <input asp-for="Address" class="form-control" aria-required="true" />
        <label asp-for="Address"></label>
    </div>
    <div class="form-floating">
        <select asp-for="companyId" class="form-control">
            @foreach (var c in (List<Company>)ViewBag.companies)
            {
                <option value="@c.companyId">@c.companyName</option>
            }
        </select>
        <label asp-for="companyId">Company</label>
    </div>
    <div class="form-floating">
        <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
        <label asp-for="PhoneNumber"></label>
    </div>

    <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
</form>
