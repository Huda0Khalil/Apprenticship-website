@using Apprenticeship2.Data.Entities



<h2 class="m-3 text-black text-center">Trainings</h2>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-4">
            <div class="card gradient-9">
                <div class="stat-widget-one">
                    <div class="stat-content">
                        <div class=" card-title">All Trainings</div>
                        <div class="stat-digit gradient-6-text">@ViewBag.trainingCount</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar gradient-3" style="width: 50%;" role="progressbar">
                            <span class="sr-only"> </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="card gradient-7">
                <div class="stat-widget-one">
                    <div class="stat-content">
                        <div class="card-title">Finished Trainngs</div>
                        <div class="stat-digit gradient-6-text">@ViewBag.finishedTraining</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar gradient-2" style="width: 100%;" role="progressbar">
                            <span class="sr-only">100% Complete</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card gradient-8">
                <div class="stat-widget-one">
                    <div class="stat-content">
                        <div class="card-title">Current Trainings</div>
                        <div class="stat-digit gradient-6-text">@ViewBag.currentTrainings</div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar gradient-4" style="width: 15%;" role="progressbar">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h2 class="m-3 text-black text-center">Assignments</h2>
    <div class="row">
        @foreach (var A in (List<Assignment>)ViewBag.Assignments)
        {
            <div class="col-md-4 col-lg-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@A.assignmentTitle</h5>
                        <p class="card-text">@A.AssignmentDescription</p><a href="/Assignment/showAssignment?TID=@A.trainingId" class="btn btn-primary">Go</a>
                    </div>

                </div>
            </div>
            <!-- End Col -->
        }


    </div>
    <h2 class="m-3 text-black text-center">Students</h2>
    <div class="row">
        
        @foreach (var s in (List<Training>)ViewBag.students)
        {<a href=""></a>
            <div class="col-lg-4 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <img src="./images/imgs/user.png" class="rounded-circle" alt="">
                            <h5 class="mt-3 mb-1">@s.student.FirstName @s.student.SecondName @s.student.LastName</h5>
                            <p class="m-0">@s.student.Major</p>
                            <p class="m-0">@s.student.University.universityName</p>
                            <!--
                            </><a class="text-decoration-none" target="_blank" href="/Report/GetFile?attachmentId=">Show Training</a>
                            -->

                            <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                        </div>
                    </div>
                </div>
            </div>
        }
        
       

    </div>

    
</div>