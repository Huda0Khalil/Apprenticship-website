@{
}
@using Apprenticeship2.Data.Entities
@model Training
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Trainings</h4>
                <div class="table-responsive">
                    <table id="myTable" class="table table-striped table-bordered zero-configuration">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Company</th>
            <th>Team Leader</th>
            <th>Training Objectives</th>
            <th>Assignments</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var T in (List<Training>)ViewBag.trainings)
        {
            <tr>

                <td>@T.student.FirstName @T.student.LastName</td>

                <td>@T.teamLeader.Company.companyName</td>

                <td>@T.teamLeader.FirstName @T.teamLeader.LastName</td>

                <td>@String.Join(',',T.trainingObjectives.Select(x=>x.objective.Name).ToList())</td>

                <td><a class="btn btn-primary mb-4" href="/UniversitySupervisor/showAssignment?TID=@T.TrainingId">Assignment</a></td>
            </tr>



        }

    </tbody>
  
</table>
</div>
</div>
</div>
</div>
</div>